@model GiellyGreen.Models.PdfViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Invoice</title>
    <link href="http://fonts.cdnfonts.com/css/dax" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: "Dax"
        }

        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 50%;
            padding: 10px;
            height: 150px; /* Should be removed. Only for demonstration */
        }

        .columnHeader {
            float: left;
            width: 50%;
            padding: 10px;
            height: 70px; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        th, td {
            padding: 5px;
        }

        .widthcol {
            width: 60%;
        }

        table {
            border: none
        }

        .borderCell {
            border: 1px solid gray;
        }

        .text-right {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row" style="margin-bottom:3px;">
            <div class="columnHeader">
                @if (@Model.Invoice.Logo != null)
                {
                    <img src="@Model.Invoice.Logo" width="200" height="100" alt=@Model.Invoice.Logo />
                }
            </div>
            <div class="columnHeader" style="text-align:right">
                <h1>Self Billed Invoice</h1>
            </div>
        </div>
        <br />
        <div class="row ">
            <div class="column" style="text-align:left">
                <h4>@Model.Invoice.SupplierName</h4>
                <h4>@Model.Invoice.BusinessAddress</h4>
            </div>
            <div class="column" style="text-align:right">
                <h4> Invoice Date :  @Convert.ToDateTime(Model.Invoice.InvoiceDate).ToString("dd-MM-yyyy")</h4>
                <h4>Invoice Referance : @Model.Invoice.InvoiceRef</h4>
                <br />
                @if (Model.Invoice.TAXReference != null)
                {
                    <h4> TAX Referance : @Model.Invoice.TAXReference</h4>
                }
                @if (Model.Invoice.VATNumber != null)
                {
                    <h4> TAX VATNumber : @Model.Invoice.VATNumber</h4>
                }
            </div>
        </div>
        <br />
        <div class="row">
            <div class="column">
                <h4>To : @Model.CompanyProfile.CompanyName</h4>
                <h4>@Model.CompanyProfile.AddressLine</h4>
                <h4>@Model.CompanyProfile.City - @Model.CompanyProfile.ZipCode</h4>
                <h4>@Model.CompanyProfile.Country</h4>
            </div>
        </div>
        <br />
        <div class="row" style="margin-bottom:3px;">
            <div class="col-md-12">
                <table class="table-bord" style="width:100%">
                    <thead>
                        <tr style="padding:3px;" class="borderCell">
                            <th class="borderCell" colspan="3" style="text-align:center">Description</th>
                            <th  class="borderCell text-right" style="border-left:0px">Amount(GBP)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr  class="borderCell">
                            <td  colspan="2" class="widthcol borderCell">Hair Services</td>
                            <td class="borderCell"></td>
                            <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.HairServices).ToString("N2")</td>
                        </tr>
                        <tr class="borderCell">
                            <td class="borderCell" colspan="2">Beauty Services</td>
                            <td class="borderCell"></td>
                            <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.BeautyServices).ToString("N2")</td>
                        </tr>
                        @if (Model.Invoice.CustomHeader1 != null && Model.Invoice.CustomService1!=0)
                        {
                            <tr  class="borderCell">
                                <td class="borderCell" colspan="2">@Model.Invoice.CustomHeader1</td>
                                <td class="borderCell"></td>
                                <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.CustomService1).ToString("N2")</td>
                            </tr>
                        }
                        @if (Model.Invoice.CustomHeader2 != null && Model.Invoice.CustomService2 != 0)
                        {
                            <tr  class="borderCell">
                                <td class="borderCell" colspan="2">@Model.Invoice.CustomHeader2</td>
                                <td class="borderCell"></td>
                                <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.CustomService2).ToString("N2")</td>
                            </tr>
                        }
                        @if (Model.Invoice.CustomHeader3 != null && Model.Invoice.CustomService3 != 0)
                        {
                            <tr  class="borderCell">
                                <td class="borderCell" colspan="2">@Model.Invoice.CustomHeader3</td>
                                <td class="borderCell"></td>
                                <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.CustomService3).ToString("N2")</td>
                            </tr>
                        }
                        @if (Model.Invoice.CustomHeader4 != null && Model.Invoice.CustomService4 != 0)
                        {
                            <tr  class="borderCell">
                                <td class="borderCell" colspan="2">@Model.Invoice.CustomHeader4</td>
                                <td class="borderCell"></td>
                                <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.CustomService4).ToString("N2")</td>
                            </tr>
                        }
                        @if (Model.Invoice.CustomHeader5 != null && Model.Invoice.CustomService5 != 0)
                        {
                            <tr  class="borderCell">
                                <td class="borderCell" colspan="2">@Model.Invoice.CustomHeader5</td>
                                <td class="borderCell"></td>
                                <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.CustomService5).ToString("N2")</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="2" style="border:0px"></td>
                            <td class="text-right" >Subtotal(Net)</td>
                            <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.Net).ToString("N2")</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td class="text-right">VAT</td>
                            <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.VAT).ToString("N2")</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td class="text-right">Advance Paid</td>
                            <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.AdvancePaid).ToString("N2")</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td class="text-right">Balance Due</td>
                            <td class="borderCell text-right">@Convert.ToDecimal(Model.Invoice.BalanceDue).ToString("N2")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>
